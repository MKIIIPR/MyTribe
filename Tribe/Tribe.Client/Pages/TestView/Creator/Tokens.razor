@page "/testview/creator/tokens"
@using MudBlazor
@using Tribe.Services.ClientServices.ShopServices
@using Tribe.Bib.Models.TribeRelated
@inject ISnackbar Snackbar

<TestView.Creator.CreatorLayout>
    <!-- Page Header -->
    <MudStack Spacing="0" Class="mb-6">
        <MudBreadcrumbs Items="_breadcrumbs" Class="pa-0" />
        <MudText Typo="Typo.h4">Token Verwaltung</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Erstelle und verwalte eigene Tokens für deine Community.
        </MudText>
    </MudStack>

    <!-- Info Banner -->
    <MudAlert Severity="Severity.Info" Class="mb-4">
        <MudText Typo="Typo.body2">
            Tokens können für Raffles, Belohnungen oder als Währung in deinem Shop verwendet werden.
        </MudText>
    </MudAlert>

    <!-- Use existing component -->
    <MudPaper Elevation="0" Class="pa-4 rounded-lg" Style="border: 1px solid var(--mud-palette-lines-default);">
        <CascadingValue Value="_creatorProfile">
            <Tribe.Ui.Pages.UserDashboard.CreatorProfile.Dialogs.CreatorTokensEdit />
        </CascadingValue>
    </MudPaper>
</TestView.Creator.CreatorLayout>

@code {
    [CascadingParameter(Name = "CreatorProfile")]
    private CreatorProfileDto? _profile { get; set; }
    
    private CreatorProfile? _creatorProfile;

    private List<BreadcrumbItem> _breadcrumbs = new()
    {
        new BreadcrumbItem("Dashboard", "/testview/creator"),
        new BreadcrumbItem("Tokens", null, disabled: true)
    };
}
