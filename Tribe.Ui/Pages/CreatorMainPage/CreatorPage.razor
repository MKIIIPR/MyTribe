        }

        .label {
            color: #0f8;
        }

        .value {
            color: #0ff;
            font-weight: 500;
        }

        .ammo-bar {
            width: 100%;
            height: 8px;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid #006;
            border-radius: 4px;
            margin-top: 8px;
            position: relative;
        }

        .ammo-fill {
            height: 100%;
            background: linear-gradient(90deg, #0ff, #0f8);
            border-radius: 4px;
            width: 75%;
            transition: width 0.3s ease;
            box-shadow: 0 0 5px #0ff;
        }

        .overheat-bar {
            width: 100%;
            height: 8px;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid #006;
            border-radius: 4px;
            margin-top: 8px;
            position: relative;
        }

        .overheat-fill {
            height: 100%;
            background: linear-gradient(90deg, #f80, #f00);
            border-radius: 4px;
            width: 40%;
            transition: width 0.3s ease;
            box-shadow: 0 0 5px #f80;
        }

        .autoaim-indicator {
            width: 12px;
            height: 12px;
            background: #0f8;
            border-radius: 50%;
            margin-left: 8px;
            animation: pulse 2s infinite alternate;
        }

        @@keyframes pulse {
            0%

        {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
            transform: scale(1.2);
        }

        }

        .weapon-panel::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border: 1px solid #00f;
            border-radius: 12px;
            pointer-events: none;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            z-index: -1;
        }

        .overheat-label {
            color: #f80;
        }

        .overheat-value {
            color: #f00;
        }

        .info-text {
            font-size: 12px;
            opacity: 0.8;
            margin-top: 8px;
        }
    </style>


