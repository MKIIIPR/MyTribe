@using MudBlazor
@using Tribe.Bib.ShopRelated
@using Tribe.Ui.Pages.UserDashboard.CreatorShop
@using static Tribe.Bib.ShopRelated.ShopStruckture

<MudTabs Outlined="true" Position="Position.Start" Rounded="true" Border="true"
    ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-6">
    
    <MudTabPanel Text="Übersicht" Icon="@Icons.Material.Filled.Dashboard">
        <Tribe.Ui.Pages.Shop.CreatorShop.ShopDashboardOverview></Tribe.Ui.Pages.Shop.CreatorShop.ShopDashboardOverview>
    </MudTabPanel>
    
    <MudTabPanel Text="Produkte" Icon="@Icons.Material.Filled.ShoppingCart">
        <ProductsList></ProductsList>
    </MudTabPanel>
    
    <MudTabPanel Text="Kategorien" Icon="@Icons.Material.Filled.Category">
        <Categories></Categories>
    </MudTabPanel>
    
    <MudTabPanel Text="Raffles" Icon="@Icons.Material.Filled.EmojiEvents">
        <Tribe.Ui.Pages.CreatorShop.RaffleList></Tribe.Ui.Pages.CreatorShop.RaffleList>
    </MudTabPanel>
    
    <MudTabPanel Text="Bestellungen" Icon="@Icons.Material.Filled.Receipt">
        <Orders></Orders>
    </MudTabPanel>
    
    <MudTabPanel Text="Bewertungen" Icon="@Icons.Material.Filled.RateReview">
        <MudText Typo="Typo.h6">Produktbewertungen</MudText>
        <MudText Typo="Typo.body1" Class="mt-3">
            Hier sehen Sie alle Bewertungen für Ihre Produkte. Kunden können Ihre Produkte bewerten und Kommentare hinterlassen.
        </MudText>
        <!-- TODO: Implement reviews list by creator -->
        <MudAlert Severity="Severity.Info" Class="mt-3">
            Reviews Management wird in Kürze implementiert
        </MudAlert>
    </MudTabPanel>
    
</MudTabs>
